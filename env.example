# 伺服器設定
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:5173

# 資料庫設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=silver_jewelry_brain
DB_USER=postgres
DB_PASSWORD=your_password

# JWT 設定
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# 金價 API 設定 (由TradingView提供)
GOLD_API_URL=https://api.exchangerate-api.com/v4/latest/USD

# AI 服務設定
OPENAI_API_KEY=your_openai_api_key
VECTOR_DB_URL=your_vector_db_url

# 價格更新設定
DEFAULT_PRICE_UPDATE_INTERVAL=900000 # 15分鐘 (毫秒)
MIN_PRICE_UPDATE_INTERVAL=900000     # 最小15分鐘
MAX_PRICE_UPDATE_INTERVAL=86400000   # 最大24小時

# 匯率設定
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/USD
DEFAULT_EXCHANGE_RATE=31.5

# 工錢設定 (台幣/台錢)
DEFAULT_WORKMANSHIP_FEE=500

# 前端 URL
FRONTEND_URL=http://localhost:5173

# 郵件服務配置 (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Twilio 簡訊服務配置
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google OAuth 配置
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LINE OAuth 配置
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret

# Apple OAuth 配置
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# reCAPTCHA 配置
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key 